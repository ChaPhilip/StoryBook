<h3>Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                {{!-- I had an exta input type = 'text' and another line was added in the title --}}
                  <label for ="title">Title</label>
              </div>
            </div>
    
        <div class="row">
            <div class="input-field">
                {{!-- select creates a shell of a drop down --}}
                <select name="status" id="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}

                </select>
                <label for="status">Status</label>
                    </div>
                </div>

                <div class="row">
                     <div class="input-field">
                        <h5>Tell Us Your Story</h5>
               {{!-- textarea can adjust the size of the box by dragging --}}
                    <textarea name="body" id="body" >{{story.body}}</textarea>
                </div>
            </div>
           
            <div class="row">
                <input type="submit" value ="Save" class ="btn">
                <a href="/dashboard" class = "btn orange">Cancel</a>
            </div>

    </form>
</div>

{{!-- we use form b/c CRUD is built in. no extra packaging just send it. instead of a input box just send the form in 1 package --}}